<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Assets Frontend -->
    <template id="asset_frontend" inherit_id="web.assets_frontend" name="Theme Crafito Frontend">
        <xpath expr="." position="inside">
            <link href='/eagle_shop/static/src/css/plugins/owl.carousel.css' rel="stylesheet"/>
            <link href="/eagle_shop/static/src/css/plugins/unite-gallery.css" rel="stylesheet"/>
            <link rel="stylesheet" href="/eagle_shop/static/src/css/plugins/ion.rangeSlider.css" type="text/css"/>
            <link rel="stylesheet" href="/eagle_shop/static/src/css/plugins/ion.rangeSlider.skinHTML5.css" type="text/css"/>
            <link href='/eagle_shop/static/src/skins/alexis/alexis.css' rel="stylesheet"/>

            <link href="/eagle_shop/static/src/less/variable.less" rel="stylesheet" type="text/less"/>
            <link href="/eagle_shop/static/src/less/mixins.less" rel="stylesheet" type="text/less"/>

            <link href="/eagle_shop/static/src/less/header.less" rel="stylesheet" type="text/less"/>
            <link href="/eagle_shop/static/src/less/footer.less" rel="stylesheet" type="text/less"/>

            <link href="/eagle_shop/static/src/less/skills.less" rel="stylesheet" type="text/less"/>
            <link href="/eagle_shop/static/src/less/testimonial.less" rel="stylesheet" type="text/less"/>
            <link href="/eagle_shop/static/src/less/product-detail-page.less" rel="stylesheet" type="text/less"/>
            <link href="/eagle_shop/static/src/less/custom.less" rel="stylesheet" type="text/less"/>

            <script src="/eagle_shop/static/src/js/plugins/waypoints.min.js"></script>
            <script src="/eagle_shop/static/src/js/plugins/jquery.counterup.js"></script>
            <script src="/eagle_shop/static/src/js/plugins/owl.carousel.min.js"></script>
            <script type="text/javascript" src="/eagle_shop/static/src/js/plugins/ion.rangeSlider.min.js"></script>
            <script type="text/javascript" src="/eagle_shop/static/src/js/plugins/carousel-swipe.js"></script>
            <script src="/eagle_shop/static/src/js/plugins/jquery.circleGraphic.js" type="text/javascript"/>
            <script src="/eagle_shop/static/src/js/plugins/unitegallery.min.js" type="text/javascript"/>
            <script src="/eagle_shop/static/src/js/plugins/ug-theme-compact.js" type="text/javascript"/>

            <script src="/eagle_shop/static/src/js/crafito_frontend.js" type="text/javascript"/>
            <script src="/eagle_shop/static/src/js/crafito_custom.js" type="text/javascript"/>

            <script src="/eagle_shop/static/src/js/rating_state.js" type="text/javascript"/>
            
        </xpath>
    </template>

    <!-- Assets Editor -->
    <template id="assets_editor" inherit_id="web_editor.assets_editor" name="Theme Crafito Editor">
        <xpath expr="." position="inside">
            <script src="/eagle_shop/static/src/js/crafito_editor.js" type="text/javascript"/>
        </xpath>
    </template>

    <template id="assets_layout" inherit_id="website.layout" name="Theme Crafito Layout">
        <xpath expr="//footer[last()]" position="after">
          <script src="/eagle_shop/static/src/js/plugins/jquery.easing.1.3.js" type="text/javascript"></script>
          <script src="/eagle_shop/static/src/js/plugins/jquery.quicksand.js"></script>
          <script src="/eagle_shop/static/src/js/crafito_common_custom.js" type="text/javascript"/>
        </xpath>
    </template>
</odoo>
